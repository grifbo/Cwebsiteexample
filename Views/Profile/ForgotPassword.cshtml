@model IHLA_Template.Models.User
@{
	ViewBag.Title = "ForgotPassword";
}

<h2>Forgot Password?</h2>

<h4 style="color:red">@ViewBag.Message</h4>

@using (Html.BeginForm(FormMethod.Post)) {
	<div class="section">
		<div class="item">
			<div>@Html.LabelFor(model => model.UserID)</div>
			<div>@Html.TextBoxFor(model => model.UserID, new { @autofocus = "autofocus" })</div>
		</div>
		<div class="item">
			<div>@Html.LabelFor(model => model.Email)</div>
			<div>@Html.TextBoxFor(model => model.Email)</div>
		</div>

	</div>
	<div>
		<button id="btnSignIn" name="btnSubmit" value="signin" class="btn btn-success"> Submit</button>
	</div>
	<div>
		New User?
		@Html.ActionLink("Sign-up", "SignUp")
	</div>
}

